async function rasterizeImageToRGBA(
  file: File,
  outW: number,
  outH: number,
  scaleFactor: number,
  offset: { x: number; y: number },
  rotation: number
): Promise<ImageData> {
  const url = URL.createObjectURL(file);
  const img = new Image();
  img.src = url;
  await img.decode();

  const canvas = document.createElement("canvas");
  canvas.width = outW;
  canvas.height = outH;

  const ctx = canvas.getContext("2d")!;
  ctx.clearRect(0, 0, outW, outH);
  ctx.save();
  ctx.translate(outW / 2 + offset.x, outH / 2 + offset.y);
  ctx.rotate((rotation * Math.PI) / 180);
  const fitScale = Math.min(outW / img.width, outH / img.height) * scaleFactor;
  ctx.scale(fitScale, fitScale);
  ctx.drawImage(img, -img.width / 2, -img.height / 2);
  ctx.restore();

  const data = ctx.getImageData(0, 0, outW, outH);
  URL.revokeObjectURL(url);
  return data;
}

function hexToRgb(hex: string) {
  const s = hex.replace("#", "");
  const n = parseInt(s, 16);
  return { r: (n >> 16) & 255, g: (n >> 8) & 255, b: n & 255 };
}

function rgbDist2(a: { r: number; g: number; b: number }, b: { r: number; g: number; b: number }) {
  const dr = a.r - b.r;
  const dg = a.g - b.g;
  const db = a.b - b.b;
  return dr * dr + dg * dg + db * db;
}

