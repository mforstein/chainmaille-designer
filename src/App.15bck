                  const pxPerMm = 96 / 25.4;
                  const pageWmm = 216; // 8.5in
                  const pageHmm = 279; // 11in
                  const pageWpx = pageWmm * pxPerMm;
                  const pageHpx = pageHmm * pxPerMm;

